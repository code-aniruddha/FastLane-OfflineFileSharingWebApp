{
    "name": "fastlane",
    "version": "1.0.0",
    "description": "FastLane - Lightning-fast Offline File Sharing App (No Internet Required)",
    "main": "electron/main.js",
    "type": "commonjs",
    "scripts": {
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
        "build": "vite build",
        "build:win": "npm run build && electron-builder --win",
        "build:mac": "npm run build && electron-builder --mac",
        "build:linux": "npm run build && electron-builder --linux",
        "build:all": "npm run build && electron-builder -mwl"
    },
    "keywords": [
        "electron",
        "react",
        "file-sharing",
        "offline",
        "lan",
        "p2p"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "multer": "^1.4.5-lts.1",
        "cors": "^2.8.5",
        "uuid": "^9.0.1",
        "qrcode": "^1.5.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-qr-code": "^2.0.12",
        "three": "^0.160.0",
        "@react-three/fiber": "^8.15.13",
        "@react-three/drei": "^9.93.0",
        "lenis": "^1.0.42",
        "framer-motion": "^10.16.16",
        "gsap": "^3.12.5"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.2.1",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "vite": "^5.0.8",
        "concurrently": "^8.2.2",
        "wait-on": "^7.2.0",
        "cross-env": "^7.0.3"
    },
    "build": {
        "appId": "com.fastlane.app",
        "productName": "FastLane",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "electron/**/*",
            "dist/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "build/icon.png"
        }
    }
}
